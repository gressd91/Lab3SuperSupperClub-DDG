<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Lab3SuperSupperClub.Models"
    x:DataType="models:BusinessLogic"
    x:Class="Lab3SuperSupperClub.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="A" Clicked="HandleAdd" Order="Primary">
            <ToolbarItem.IconImageSource>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, WinUI" Value="add.png" />
                </OnPlatform>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem Text="E" Clicked="HandleEdit" Order="Primary"/>
        <ToolbarItem Text="C" Clicked="HandleClear" Order="Primary"/>
        <ToolbarItem Text="D" Clicked="HandleDeleteAll" Order="Primary"/>
     

    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Sup, Sup, Supper Clubs!" FontSize="Large" Margin="0,0,0,10" />
            <BoxView />
            <Grid RowDefinitions="*,*" ColumnDefinitions="2*,4*,1*,2*,1*" Padding="0,0"
                Margin="0,0">
                <Label Text="Club Id" FontAttributes="Bold" />
                <Label Text="Name" Grid.Column="1" FontAttributes="Bold"/>
                <Label Text="City" Grid.Column="2" FontAttributes="Bold"/>
                <Label Text="Ratings" Grid.Column="3" FontAttributes="Bold"/>
                <Label Text="Action" Grid.Column="4" FontAttributes="Bold"/>
                <!-- Horizontal divider -->
                <BoxView Grid.Row="1" Grid.ColumnSpan="9" HeightRequest="1"
                    BackgroundColor="LightGray" />
            </Grid>
            <CollectionView ItemsSource="{Binding SupperClubs}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:SupperClub">
                        <StackLayout Margin="0,0,0,15">
                            <Grid ColumnDefinitions="*,4*,3*,2*,2*">
                                <Label Grid.Column="0" Text="{Binding ClubId}" FontSize="Medium"
                                    VerticalOptions="Center" />
                                <Label Grid.Column="1" Text="{Binding Name}" FontSize="Medium"
                                    VerticalOptions="Center" />
                                <Label Grid.Column="2" Text="{Binding City}" FontSize="Medium"
                                    VerticalOptions="Center" />
                                <Label Grid.Column="3" Text="{Binding RatingsString}"
                                    FontSize="Medium" VerticalOptions="Center" />
                                <Button Grid.Column="4" Width="20" Height="20"
                                    ImageSource="icons8_trash_60.png" BackgroundColor="White"
                                    Clicked="HandleDelete" VerticalOptions="Center" />
                            </Grid>
                            <BoxView HeightRequest="1" BackgroundColor="Gray" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Enter Values:" FontSize="14" Margin="5,0,0,0" />
            <Grid ColumnDefinitions="*,4*,4*,*">
                <Entry Grid.Column="0" x:Name="ClubIdENT" Placeholder="Id" />
                <Entry Grid.Column="1" x:Name="NameENT" Placeholder="Name" />
                <Entry Grid.Column="2" x:Name="CityENT" Placeholder="City" />
                <Entry Grid.Column="3" x:Name="RatingsENT" Placeholder="Rs" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>